{
    "name": "smoothie",
    "version": "1.0.0",
    "description": "Discord.js v14 music bot using Typescript and MongoDB.",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "dev": "nodemon -w *.ts -e ts -x ts-node --esm --files -H ./src/index.ts",
        "prod": "node dist/index.js",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "format": "prettier --config .prettierrc --write \"**/*.+(js|ts|json)\"",
        "register-global-commands": "node ./dist/scripts/commands/registerGlobalSlashCommands.js",
        "register-guild-commands": "node ./dist/scripts/commands/registerGuildSlashCommands.js",
        "clear-global-commands": "node ./dist/scripts/commands/clearGlobalSlashCommands.js",
        "clear-guild-commands": "node ./dist/scripts/commands/clearGuildSlashCommands.js"
    },
    "keywords": [
        "discord",
        "discord.js",
        "typescript",
        "nodejs",
        "mongodb"
    ],
    "author": "",
    "license": "gpl-3.0",
    "devDependencies": {
        "@tsconfig/node18-strictest": "^1.0.0",
        "@types/didyoumean": "^1.2.0",
        "@types/glob": "^8.1.0",
        "@types/node": "^20.3.3",
        "@types/string-similarity": "^4.0.0",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^3.1.4",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "@discordjs/opus": "^0.9.0",
        "@discordjs/voice": "^0.16.0",
        "@distube/ytdl-core": "^4.13.5",
        "@ffmpeg-installer/ffmpeg": "^1.1.0",
        "@typegoose/typegoose": "^11.7.1",
        "@types/fluent-ffmpeg": "^2.1.24",
        "array-shuffle": "^3.0.0",
        "async-mutex": "^0.4.0",
        "chalk": "^5.3.0",
        "didyoumean": "^1.2.2",
        "discord.js": "^14.11.0",
        "dotenv": "^16.3.1",
        "ffmpeg": "^0.0.4",
        "ffmpeg-static": "^5.1.0",
        "fluent-ffmpeg": "^2.1.3",
        "glob": "^10.3.1",
        "json-colorizer": "^2.2.2",
        "mongoose": "^7.6.13",
        "parse-url": "^8.1.0",
        "play-dl": "^1.9.6",
        "set-interval-async": "^3.0.3",
        "string-similarity": "^4.0.4",
        "tweetnacl": "^1.0.3",
        "youtube-dl-exec": "^2.4.6"
    }
}
