{
    "name": "nodejs-typescript-template",
    "version": "1.0.0",
    "description": "Template project for typescript and nodejs.",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "dev": "nodemon -w *.ts -e ts -x ts-node --esm --files -H ./src/index.ts",
        "prod": "node dist/index.js",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "format": "prettier --config .prettierrc --write \"**/*.+(js|ts|json)\"",
        "register-global-commands": "tsc && node ./dist/scripts/commands/registerGlobalSlashCommands.js",
        "register-guild-commands": "tsc && node ./dist/scripts/commands/registerGuildSlashCommands.js",
        "clear-global-commands": "tsc && node ./dist/scripts/commands/clearGlobalSlashCommands.js",
        "clear-guild-commands": "tsc && node ./dist/scripts/commands/clearGuildSlashCommands.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@tsconfig/node18-strictest": "^1.0.0",
        "@types/glob": "^8.1.0",
        "@types/node": "^20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "@discordjs/voice": "^0.16.0",
        "@typegoose/typegoose": "^11.2.0",
        "async-mutex": "^0.4.0",
        "chalk": "^5.2.0",
        "discord.js": "^14.11.0",
        "dotenv": "^16.1.2",
        "glob": "^10.2.6",
        "json-colorizer": "^2.2.2",
        "mongoose": "^7.2.2",
        "parse-url": "^8.1.0",
        "play-dl": "^1.9.6",
        "youtube-dl-exec": "^2.4.4",
        "ytdl-core": "^4.11.4"
    }
}
